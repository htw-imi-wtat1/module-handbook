<h1 class="center">User Data for
  <%= user.fullName %>
</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <td>
      <%= user.fullName %>
    </td>
  </tr>
  <tr>
    <th>Email</th>
    <td>
      <%= user.email%>
    </td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td>
      <%= user.zipCode%>
    </td>
  </tr>
  <tr>
    <th>Password</th>
    <td>********</td>
  </tr>
</table>


<div class="center">
  <a class="button" href="<%=`/users/${user._id}/edit`%>">
    Edit User Details
  </a> |
  <a class="button" href="<%= `/users/${user._id}?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
 |
  <a class="button" href="/users">View all users</a>
</div>
<hr/>
<%- include('../logEntries/index.ejs', {user: user}); %>
